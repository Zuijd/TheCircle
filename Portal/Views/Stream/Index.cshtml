@{
  ViewData["Title"] = "Stream";
    var username = User.Identity?.Name;
}


<head>
    <meta charset="UTF-8">
    <title>Stream</title>
    <!-- Include necessary libraries -->
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
</head>

<body>
    <video id="video" width="640" height="480" autoplay></video>

    <button class="btn btn-success" onclick="startButton()">Start Streaming</button>
    <button class="btn btn-danger" onclick="stopButton()">Stop Streaming</button>
    <button class="btn btn-info" onclick="switchCamera()">Start/Stop Camera</button>

  
<img src="" alt="">
  
@* chat *@
<div class="container" id="stream-container" data-user="@username">
    <div class="row p-1">
        <div class="col-1">Message</div>
        <div class="col-5"><input type="text" class="w-100" id="messageInput" /></div>
    </div>
    <div class="row p-1">
        <div class="col-6 text-end">
            <input type="button" id="sendButton" value="Send Message" />
        </div>
    </div>
    <div class="row p-1">
        <div class="col-6">
            <hr />
        </div>
    </div>
    <div class="row p-1">
        <div class="col-6">
            <ul id="messagesList"></ul>
        </div>
    </div>
    <input type="hidden" id="viewName" value="Stream Index">
</div>
</body>


@section Scripts{
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="/js/chat.js"></script>
    <!-- Include the stream.js file -->
    <script src="/js/stream.js"></script>
} 
