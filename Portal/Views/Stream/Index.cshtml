<head>
    <meta charset="UTF-8">
    <title>Stream</title>
    <!-- Include necessary libraries -->
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
</head>

<div class="container">
    <div class="row">
            <div col-md></div>
        
        <button id="startStreamBtn" class="btn btn-success">Start Streaming</button>
        
    </div>

    <div class="row justify-content-center mt-4">
        <div class="col-md-6 mb-4" id="streamBox">
            <video id="video" style="width: 100%; height: 100%;" autoplay></video>

            </div>

        <div id="chatBox" class="col-md-6 mb-4 chatbox-container">
            <div class="chatbox-title">Chatbox for streamer 1</div>
            <div class="viewer-count">Viewers: <span id="watcherCount"></span></div>
            <div class="chatbox-messages"></div>
            <div class="chatbox-input"><input type="text" placeholder="Type your message..." class="chatbox-input-text">
            <button class="chatbox-input-button">Send</button>
            </div>
            </div>

    </div>

    <img id="circleImage" src="./assets/circle.png" alt="Circle">
</div>


@section Scripts {
<script src="~/js/stream.js" asp-append-version="true"></script>
}