@{
  ViewData["Title"] = "Stream";
}

<head>
    <meta charset="UTF-8">
    <title>Stream</title>
    <!-- Include necessary libraries -->
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
</head>

<body>
    <video id="video" width="640" height="480" autoplay></video>
    
    <div id="watcherCountContainer" class="viewerCount">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-fill m-1" viewBox="0 0 16 16">
            <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z" />
            <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8zm8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7z" />
        </svg>
        <span id="watcherCount"></span> viewer(s)
    </div>

    <button onclick="startStreaming()">Start Streaming</button>
    <button onclick="stopStreaming()">Stop Streaming</button>



    <!-- Include the stream.js file -->
    <script src="/js/stream.js"></script>
</body>


