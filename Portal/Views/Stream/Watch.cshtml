@{
    ViewData["Title"] = "Watch Stream";
}

<!DOCTYPE html>
<html>
<head>
    <title>Live Stream Viewer</title>
</head>
<body>
    <div class="container" id="stream-container" data-user="@ViewBag.Username">
        <a href="/" class="btn btn-primary mb-3">Back</a>
        <div class="row g-0">
            <div class="col-md">
                <div class="ratio ratio-4x3">
                    <video id="video" height="480" autoplay controls></video>
                </div>
            </div>
            <div class="col-sm bg-secondary">
                <div class="row p-1">
                    <div class="col-1">Message</div>
                    <div class="col-5"><input type="text" class="w-100" id="messageInput" /></div>
                </div>
                <div class="row p-1">
                    <div class="col-6 text-end">
                        <input type="button" id="sendButton" value="Send Message" />
                    </div>
                </div>
                <div class="row p-1">
                    <div class="col-6">
                        <hr />
                    </div>
                </div>
                <div class="row p-1">
                    <div class="col-6">
                        <ul id="messagesList"></ul>
                    </div>
                </div>
                <input type="hidden" id="viewName" value="Watch">
            </div>
        </div>
    </div>
</body>
</html>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="/js/watch.js"></script>
    <script src="/js/chat.js"></script>
}