@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>
<form asp-action="Register" asp-controller="User" method="post">
    <div>
        <label asp-for="Username">Username:</label>
        <input asp-for="Username">
        <div><span asp-validation-for="Username" class="text-danger"></span></div>
    </div>
    <div>
        <label asp-for="EmailAddress">Email:</label>
        <input asp-for="EmailAddress">
        <div><span asp-validation-for="EmailAddress" class="text-danger"></span></div>
    </div>
    <div>
        <label asp-for="Password">Password:</label>
        <input asp-for="Password" type="password">
        <div><span asp-validation-for="Password" class="text-danger"></span></div>
    </div>
    <div>
        <input type="submit" value="Register">
    </div>
</form>