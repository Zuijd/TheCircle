@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
<form asp-action="Login" asp-controller="User" method="post">
    <div>
        <label asp-for="Username">Username:</label>
        <input asp-for="Username" required>
        <div><span asp-validation-for="Username" class="text-danger"></span></div>
    </div>
    <div>
        <label asp-for="Password">Password:</label>
        <input asp-for="Password" type="password" required>
        <div><span asp-validation-for="Password" class="text-danger"></span></div>
    </div>
    <div>
        <input type="submit" value="Login">
    </div>
</form>